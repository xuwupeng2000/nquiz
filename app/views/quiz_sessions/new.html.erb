<div class="columns">
  <div class="column is-offset-10">
    <%= link_to "Go back to records history", team_quiz_sessions_path(@team), class: 'button'%>
  </div>
</div>

<div class="columns">
  <div class="column">
    <%= form_for @session, url: team_quiz_sessions_path(@team) do |f| %>
      <% if @session.errors.any? %>
        <div class="column notification is-danger">
          <%= @session.errors.full_messages.to_sentence %>
        </div>
      <% end %>

      <div class="column">
          <label class="label"> Total:</label> <%= f.text_field :total_quiz_number, class: 'input' %>
      </div>
      <div class="column">
          <label class="label"> Corrent:</label> <%= f.text_field :correct_quiz_number, class: 'input' %>
      </div>

      <div class="column">
        <%= f.submit "Save !", class: 'button' %>
      </div>
    <% end %>
  </div>
</div>
