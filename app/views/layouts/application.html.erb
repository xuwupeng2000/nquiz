<!DOCTYPE html>
<html>
  <head>
    <title>NZX Quzi Count</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar">
      <div class="container">
        <ul class="navbar-list">
          <li class="navbar-item"><a class="navbar-link" href=" <%= teams_path %>"> Home </a></li>
          <% if @team  %>
            <li class="navbar-item"><a class="navbar-link" href=" <%= team_path(@team) %>"> <%= @team.name  %>  </a></li>
          <% end %>
        </ul>
      </div>
    </nav>


    <div class="container">
        <% if flash[:notice] %>
          <div class="row full-padding">
            <div class="notice"><%= flash[:notice] %></div>
          </div>
        <% end %>
        <%if flash[:error]  %>
          <div class="row full-padding">
            <div class="errors"><%= flash[:error] %></div>
          </div>
        <% end %>
      <%= yield %>
    </div>
  </body>
</html>
