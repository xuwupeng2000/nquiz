<div class="navbar-spacer"></div>
<div class="row">
  <div class="two columns">
  </div>
  <div class="ten columns">
    <%= form_for @team do |f| %>
      <% if @team.errors.any? %>
        <div class="row errors">
            <%= @team.errors.full_messages.to_sentence %>
        </div>
      <% end %>

      <div class="row">
          <label for=""> Name:</label> <%= f.text_field :name %>
      </div>
      <div class="row">
          <label for=""> Story of the team:</label> <%= f.text_area :description %>
      </div>
      <div class="row">
          <label for=""> Password(4 numbers):</label> <%= f.text_field :pass%>
      </div>

      <%= f.submit "Game on" %>
    <% end %>
  </div>
</div>
