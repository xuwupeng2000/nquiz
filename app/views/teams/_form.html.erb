<%= form_for @team do |f| %>
  <% if @team.errors.any? %>
    <div class="column notification is-danger">
        <%= @team.errors.full_messages.to_sentence %>
    </div>
  <% end %>

  <div class="column">
      <label class="label"> Name:</label> <%= f.text_field :name, class: 'input' %>
  </div>
  <div class="column">
      <label class="label"> Story of the team:</label> <%= f.text_area :description, class: 'textarea' %>
  </div>
  <div class="column">
      <label class="label"> Password(4 numbers):</label> <%= f.text_field :pass_number, class: 'input'%>
  </div>

  <div class="column">
    <%= f.submit "Game on", class: 'button' %>
  </div>
<% end %>
